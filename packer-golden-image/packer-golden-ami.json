{
    "_comment": "Creating Golden AMI image in AWS",
    "variables": {
        "region": "",
        "source_ami": "",
        "instance_type": "",
        "vpc_id": "",
        "subnet_id": ""
    },
    "_comment1": "packer build packer-golden-ami.json",
    "_comment2": "packer build --var-file variables-packer-golden-ami.json",
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "{{user `region`}}",
            "source_ami": "{{user `source_ami`}}",
            "instance_type": "{{user `instance_type`}}",
            "ssh_username": "ubuntu",
            "vpc_id": "{{user `vpc_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "tags": {
                "Name": "Golden-AMI-{{isotime | clean_resource_name}}"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt update",
                "sudo apt install -y nginx net-tools unzip iputils jq"
            ]
        }
    ]
}