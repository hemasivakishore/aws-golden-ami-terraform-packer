{
    "_comment": "Creating Golden AMI image in AWS",
    "variables": {
        "region": "",
        "source_ami": "",
        "instance_type": "",
        "vpc_id": "",
        "subnet_id": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "ami_name": "golden-ami-{{timestamp}}",
            "region": "{{user `region`}}",

            "source_ami": "{{user `source_ami`}}",
            "instance_type": "{{user `instance_type`}}",
            "ssh_username": "ubuntu",

            "vpc_id": "{{user `vpc_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "associate_public_ip_address": true,

            "tags": {
                "Name": "golden-ami-{{timestamp}}",
                "Owner": "VHSKISHORE",
                "Project": "aws-golden-ami",
                "Environment": "dev"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt update",
                "sudo apt install -y nginx net-tools unzip iputils-ping jq"
            ]
        }
    ]
}
